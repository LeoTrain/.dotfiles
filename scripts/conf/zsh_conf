#!/bin/bash

DOTFILES_DIR="$HOME/.dotfiles"
ZSH_CONF="$HOME/.zshrc"
ZSH_DOT="$DOTFILES_DIR/zshrc/.zshrc"
LOGFILE="zsh_conf.log"
SLOW_ECHO_SCRIPT="$DOTFILES_DIR/scripts/slow_echo"

GREEN='\033[0;32m'
RED='\033[0;31m'
YELLOW='\033[1;33m'
RESET='\033[0m'

: > "$LOGFILE"

if [ -f "$ZSH_CONF" ]; then
  echo -e "${GREEN}"
  sh $SLOW_ECHO_SCRIPT "✔ Zsh config already exists at ~/.zshrc"
  echo -e "${RESET}"
else
  echo -e "${YELLOW}"
  SLOW_ECHO_SCRIPT "→ No Zsh config found, linking from dotfiles..."
  echo -e "${RESET}"

  if ln -s "$ZSH_DOT" "$ZSH_CONF" >> "$LOGFILE" 2>&1; then
    echo -e "${GREEN}"
    SLOW_ECHO_SCRIPT "✔ Linking successful."
    echo -e "${RESET}"
  else
    echo -e "${RED}"
    SLOW_ECHO_SCRIPT "✖ ERROR: Linking failed. See $LOGFILE"
    echo -e "${RESET}"
  fi
fi

