#!/bin/bash

repos=( "$HOME/.dotfiles" )
for dir in "$HOME/lab"/*/; do
	[ -d "$dir" ] && repos+=( "$dir" )
done

all_clean=true

for repo in "${repos[@]}"; do
  repo_name=$(basename "$repo")

  if [ ! -d "$repo/.git" ]; then
    $SECHO "${RED}$repo_name: ‚ùå Not a git repository.${RESET}"
    all_clean=false
    continue
  fi

  cd "$repo" || continue
  git fetch &> /dev/null

  status_line=$(git status -sb 2>/dev/null | head -n 1)
  uncommitted=$(git status --porcelain)

  if [ -n "$uncommitted" ]; then
    $SECHO "${YELLOW}‚úèÔ∏è You have uncommitted changes in ${repo}${RESET}"
	  all_clean=false
	elif [[ "$status_line" == *"[ahead "* ]]; then
	  $SECHO "${YELLOW}üîº You have commits to push.${RESET}" 
	  all_clean=false
	elif [[ "$status_line" == *"[behind "* ]]; then
	  $SECHO "${RED}üîΩ There are commits to pull.${RESET}"
	  all_clean=false
	elif [[ "$status_line" == *"[diverged"* ]]; then
	  $SECHO "${RED}‚ö†Ô∏è Branch has diverged.${RESET}"
	  all_clean=false
  fi
done

if $all_clean; then
  $SECHO "${GREEN}‚úÖ All repositories are up-to-date.${GREEN}"
else
	$SECHO "${YELLOW}‚ö†Ô∏è Some repositories are not up-to-date.${RESET}"
	$SECHO "${YELLOW}‚Üí Please check the output above.${RESET}"
fi

